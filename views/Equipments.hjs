<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="/styles/bootstrap.min.css" />
    <link rel="stylesheet" href="/styles/style.css" />
    <script src="/js/jquery-2.2.0.min.js" type="text/javascript"></script>
    <script src="/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="/src/Equipments.js" type="text/javascript"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #D8D2C2; 
            color: #333;
            margin: 0;
            padding: 0;
            line-height: 1.6;
        }
        .center {
            text-align: center;
            margin: 20px;
        }
        .section {
            margin: 20px;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
            background-color: #f9f9f9;
        }
        .section h2 {
            color: #2c3e50;
        }
        .section p {
            font-size: 16px;
            color: #555;
        }
        .navbar-inverse .nav > li > a {
            color: #fff;
            padding: 10px 20px;
            transition: color 0.3s ease;
        }
        .navbar-inverse .nav > li > a:hover {
            color: #ffd700; 
        }
        .navbar-inverse .navbar-brand {
            color: #fff;
            font-size: 20px;
            font-weight: bold;
            transition: color 0.3s ease;
        }
        .navbar-inverse .navbar-brand:hover {
            color: #ffd700; 
        }
        .navbar-inverse .nav i {
            margin-right: 8px;
            font-size: 18px;
        }
        .navbar-inverse {
            background-color: #343a40; 
            border: none;
        }
    </style>

    <div>
        <nav class="navbar navbar-inverse">
            <a class="navbar-brand">Engineering Assets</a>
            <ul class="nav navbar-nav">
                <li><a href="/adminHomepage"><i class="fas fa-home"></i> Admin Home Page</a></li>
                <li><a href="/profile"><i class="fas fa-user-cog"></i> Profile Management</a></li>
                <li><a href="/Equipments"><i class="fas fa-tools"></i> Equipments Management</a></li>
                <li><a href="/AddEquipments"><i class="fas fa-plus-square"></i> Add Equipment</a></li>
                <li><a href="/admincart"><i class="fas fa-shopping-cart"></i> Cart</a></li>
                <li><a href="/adminorder"><i class="fas fa-receipt"></i> Orders</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right" style="padding-right: 30px;">
                <li><a href="/"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
            </ul>
        </nav>
    </div>

    <div class="container">


        <h2 class="text-center mb-4">Equipments</h2>

<div class="row mb-4">
    <div class="col-md-3">
        <input type="text" id="searchInput" class="form-control" placeholder="Search by Name or ID">
    </div>
    <div class="col-md-2">
        <button id="searchBtn" class="btn btn-primary btn-block">Search</button>
    </div>
    <div class="col-md-3">
        <select id="categoryFilter" class="form-control">
            <option value="">Select Category</option>
        </select>
    </div>
    <div class="col-md-3">
        <select id="SuppliersFilter" class="form-control">
            <option value="">Select Supplier</option>
        </select>
    </div>
</div>
<a class="btn btn-primary" href="/AddEquipments{{AddEquipments}}" role="button">Add Equipments</a>


        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="text-center">Equipment Name</th>
                    <th class="text-center">Image</th>
                    <th class="text-center">Rating</th>
                    <th class="text-center">Model Number</th>
                    <th class="text-center">Quantity</th>
                    <th class="text-center">Status</th>
                    <th class="text-center">Location</th>
                    <th class="text-center">Price</th>
                    <th class="text-center">Category ID</th>
                    <th class="text-center">Supplier ID</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody id="equipmentTable">
                {{#result}}
                <tr id="equipment-{{equipmentID}}">
                    <td class="text-center">{{equipmentName}}</td>
                    <td class="text-center">
                        <img src="{{equipmentImg}}" alt="Image" style="width: 50px; height: 50px; cursor: pointer;" data-toggle="modal" data-target="#imageModal" onclick="previewImage('{{equipmentImg}}')">
                    </td>
                    <td class="text-center">{{rating}}</td>
                    <td class="text-center">{{modelNumber}}</td>
                    <td class="text-center">{{quantity}}</td>
                    <td class="text-center">{{status}}</td>
                    <td class="text-center">{{location}}</td>
                    <td class="text-center">{{price}}</td>
                    <td class="text-center">{{categoryID}}</td>
                    <td class="text-center">{{supplierID}}</td>
                    <td class="text-center">
                        <button id="delete-{{equipmentID}}" class="btn btn-danger remove" type="button">Delete</button>
                        <button data-id="{{equipmentID}}" class="btn btn-success addToCart" type="button">Add to Cart</button>
        <button class="btn btn-primary editButton" data-id="{{equipmentID}}">Edit</button>

                    </td>
                </tr>
                {{/result}}
            </tbody>
        </table>
    </div>

    <!-- Modal for Image Preview -->
    <div class="modal fade" id="imageModal" tabindex="-1" role="dialog" aria-labelledby="imageModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-center" id="imageModalLabel">Image Preview</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body text-center">
                    <img id="previewImageTag" src="" alt="Equipment Image" class="img-fluid" style="max-height: 80vh; max-width: 100%;">
                </div>
            </div>
        </div>
    </div>

    <script>
        function previewImage(imageUrl) {
            const previewImageTag = document.getElementById('previewImageTag');
            previewImageTag.src = imageUrl;
        }
    </script>
    
</body>
</html>