<!DOCTYPE html>
<html>
  <head>
      <link rel='stylesheet' href='/styles/bootstrap.min.css' />
      <link rel='stylesheet' href='/styles/style.css' />
      <script src="/js/jquery-2.2.0.min.js" type="text/javascript"></script>
      <script src="/js/bootstrap.min.js" type="text/javascript"></script>
      <script src="/src/login.js" type="text/javascript"></script>
            <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
      <style>
          /* Set background image */
          body {
              background-image: url('/images/wallpaperflare.com_wallpaper.jpg');  /* Update the path to the local image */
              background-size: cover;  /* Ensure the image covers the entire screen */
              background-position: center center;  /* Center the image */
              background-attachment: fixed;  /* Keep the image fixed when scrolling */
              color: white;  /* Make text visible against background */
              height: 100vh;  /* Make body take full viewport height */
              display: flex;  /* Enable flexbox */
              justify-content: center;  /* Center content horizontally */
              align-items: center;  /* Center content vertically */
              margin: 0;
          }

          /* Centered login form */
          .login-container {
              background-color: rgba(0, 0, 0, 0.7);  /* Semi-transparent black background */
              padding: 40px;
              border-radius: 8px;  /* Optional: rounded corners */
              width: 400px;  /* Set width of the form */
              box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);  /* Optional: shadow for better visibility */
          }

          /* Adjust form inputs */
          .form-horizontal {
              color: white;
          }

          .form-group {
              margin-bottom: 20px;  /* Space between form fields */
          }

          .form-control {
              border-radius: 4px;
              padding: 10px;
              width: 100%;  /* Ensure input boxes take full width */
          }

          .btn-primary {
              width: 100%;  /* Make the button stretch to full width */
              padding: 10px;
              border-radius: 4px;
          }

          .center {
              text-align: center;
              color: white;  /* White text for better visibility */
          }

      </style>
  </head>
  <body>   
    <div class="login-container">
      <div class="center">
        <h1>Login</h1>
        <h2>Welcome</h2>
      </div>

      <form class="form-horizontal">
        <div class="form-group">
            <div>
                <input type="text" class="form-control" id="email" name="email" placeholder="Email ...">
            </div>
        </div>
        <div class="form-group">
            <div>
                <input type="password" class="form-control" id="password" name="password" placeholder="Password">
            </div>
        </div>
        <div class="form-group">
            <div>
                <input id="submit" name="submit" type="button" value="Login" class="btn btn-primary">
                <p style="text-align: center;">Need to register? <a href="/register" style="color: #f8f9fa;">Click here.</a></p>
            </div>
        </div>
    </form>
    </div>
  </body>
</html>
